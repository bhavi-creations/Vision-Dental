RewriteEngine On

# ============================
# 1) Skip admin folder (VERY IMPORTANT)
# ============================
RewriteRule ^admin/ - [L]

# ============================
# 2) Redirect direct .php to clean URL (frontend only)
# ============================
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# ============================
# 3) Internal rewrite clean URL â†’ .php (frontend only)
# ============================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([a-zA-Z0-9_-]+)/?$ $1.php [L]
